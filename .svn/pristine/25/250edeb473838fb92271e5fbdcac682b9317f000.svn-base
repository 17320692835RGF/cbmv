$(function() {
	/*收藏*/
	$(".glyphicon-heart").click(function() {
		$(this).toggleClass('cs');
	})
	
	/*点赞*/
	$(".glyphicon-thumbs-up").bind("click",function() {
		$(this).toggleClass('cs');
	})
	
	
});

function display1(){
	var span1= $("#s-introduce");
	var span2= $("#s-directory");
	var span3= $("#s-comments");
	var target1=$("#introduce");
	var target2=$("#directory");
	var target3=$("#comments");
	if(span1.attr('class')=="classTabs-cspan"){
		span1.removeClass("classTabs-cspan");
		span1.addClass("classTabs-span");
	}
	if(span2.attr('class')=="classTabs-span"){
		span2.removeClass("classTabs-span");
		span2.addClass("classTabs-cspan");
	}if(span3.attr('class')=="classTabs-span"){
		span3.removeClass("classTabs-span");
		span3.addClass("classTabs-cspan");
	}
	target1.css("display","");
	target2.css("display","none");
	target3.css("display","none");
}
